<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ViewLogic">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Overview">
            <items>
                  <MenuItem  mnemonicParsing="false" onAction="#about" text="About" />
                  <MenuItem  mnemonicParsing="false" onAction="#cmndList" text="Command list" />
                  <MenuItem  mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TextArea fx:id="input" onKeyPressed="#enterCommand" prefHeight="344.0" prefWidth="546.0" promptText="Enter your command here" style="-fx-control-inner-background:#000030" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
		 </TextArea>
   </center>
</BorderPane>
